<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Coreta ERP</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #E8F8F1;
        }

        .sidebar {
            width: 220px;
            height: 100vh;
            background-color: #3CB371;
            padding: 20px;
            position: fixed;
        }

        .sidebar h2 {
            color: white;
            text-align: center;
        }

        .menu a {
            display: block;
            background: white;
            color: #2F4F4F;
            padding: 10px;
            border-radius: 20px;
            margin: 10px 0;
            text-decoration: none;
            text-align: center;
            font-weight: bold;
        }

        .menu a:hover {
            background-color: #DFF5EC;
        }

        .content {
            margin-left: 260px;
            padding: 30px;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .cards {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h2>Coreta ERP</h2>

        <div class="menu">
            <a href="/Home">Dashboard</a>
            <a href="/Ventas">Ventas</a>
            <a href="/Compras">Compras</a>
            <a href="/Inventario">Inventario</a>
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>

</body>
</html>
